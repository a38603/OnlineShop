@model Models.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body>


    <section class="hero-slider bg-grey">
        <div class="container">
            <div class="main-hero-slider owl-carousel owl-theme">
                @foreach (var slider in Model.Sliders)
                {
                    <div class="item">
                        <div class="single-slider item">
                            <div class="row">
                                <div class="col-lg-6 col-md-8 offset-lg-3 my-auto">
                                    <div class="text-inner">
                                        <div class="hero-text">
                                            <h1>
                                                <span>@slider.SliderTitle</span> @slider.SliderSubTitle
                                            </h1>
                                            <p>@Html.Raw(slider.SliderDescription)</p>
                                            <div class="button">
                                                <a href="#" class="btn">Shop Now!</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 my-auto">
                                    <img src="~/Assets/Img_Slider/@slider.SliderImage" class="w-100" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title d-flex justify-content-between align-center">
                        <div class="d-flex section-title-left">
                            <i class="flaticon-hot-deal"></i>
                            <h2>New Products</h2>
                        </div>
                        <div class="section-title-right">
                            <a href="#">View More <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-slider owl-carousel owl-theme">
                @foreach (var product in Model.TopProducts)
                {
                    <div class="item">
                        <div class="single-product">
                            <div class="product-img">
                                <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })">
                                    <img class="product-img" src="~/Assets/Img_Products/@product.ProductImg " alt="@product.ProductName" />
                                    <span class="out-of-stock">New</span>
                                </a>
                            </div>
                            <div class="product-content">
                                <h6 class="card-title text-primary fw-bold">@product.ProductName</h6>
                                <div class="product-rate">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= product.Rating)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    }
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="product-price">
                                        <span>$@product.Price.ToString("F2")</span>
                                    </div>
                                    <button class="product-cart-btn" data-productid="@product.ProductId" type="button"><i class="fal fa-shopping-cart"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="button-head">
                            <div class="product-action">
                                <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })" class="btn btn-outline-light w-100">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <section class="midium-banner" id="deal">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-6 col-12">
                    <div class="single-banner">
                        <img src="~/Assets/Img_Collections/collection_Oppo.png" alt="#">
                        <div class="content">
                            <p>New Product</p>
                            <h3>Oppo find X8<br>Up to<span> 50%</span></h3>
                            <a href="/Product/Detail/34">Shop Now</a>
                        </div>
                    </div>
                </div>


                <div class="col-lg-6 col-md-6 col-12">
                    <div class="single-banner">
                        <img src="~/Assets/Img_Collections/collection_ap4.png" alt="#">
                        <div class="content">
                            <p>Best seller</p>
                            <h3>Airpod 4 <br> up to <span>30%</span></h3>
                            <a href="/Product/Detail/26" class="btn">Shop Now</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title d-flex justify-content-between align-center">
                        <div class="d-flex section-title-left">
                            <i class="flaticon-hot-deal"></i>
                            <h2>Top Rated Products</h2>
                        </div>
                        <div class="section-title-right">
                            <a href="#">View More <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-slider owl-carousel owl-theme">
                @foreach (var product in Model.TopRatings)
                {
                    <div class="item">
                        <div class="single-product">
                            <div class="product-img">
                                <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })">
                                    <img class="product-img" src="~/Assets/Img_Products/@product.ProductImg " alt="@product.ProductName" />
                                    <span class="out-of-stock">Hot</span>
                                </a>
                            </div>
                            <div class="product-content">
                                <h6 class="card-title text-primary fw-bold">@product.ProductName</h6>
                                <div class="product-rate">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= product.Rating)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    }
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="product-price">
                                        <span>$@product.Price.ToString("F2")</span>
                                    </div>
                                    <button class="product-cart-btn" data-productid="@product.ProductId" type="button"><i class="fal fa-shopping-cart"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="button-head">
                            <div class="product-action">
                                <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })" class="btn btn-outline-light w-100">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="product-area section pt-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 mb-5">
                    <div class="product-brand">
                        <h5>All Brands</h5>
                        <div class="brand-list">
                            <button class="brand-pill brand-filter-btn active" data-brandid="">
                                All Products
                            </button>
                            @foreach (var brand in Model.ProductByBrand)
                            {
                                <button class="brand-pill brand-filter-btn" data-brandid="@brand.BrandId">
                                    <img src="~/Assets/Img_Brands/@brand.Logo" alt="@brand.BrandName" />
                                    @brand.BrandName
                                </button>
                            }

                        </div>

                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-12">
                            <div class="section-title d-flex justify-content-between align-center">
                                <div class="d-flex section-title-left">
                                    <i class="flaticon-list-text"></i>
                                    <h2>List</h2>
                                </div>
                                <div class="section-title-right">
                                    <a href="#">View More <i class="fas fa-long-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>

                        <div id="product-list">
                            @Html.Partial("_ProductListPartial", Model.Products)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    



    <section class="shop-blog section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title d-flex justify-content-between align-center">
                        <div class="d-flex section-title-left">
                            <i class="fas fa-blog"></i>
                            <h2>Latest News</h2>
                        </div>
                        <div class="section-title-right">
                            <a href="@Url.Action("Index", "Blog")" class="your-class">View More <i class="fas fa-long-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var blog in Model.Blogs)
                {
                    <div class="col-lg-4 col-md-6 col-12 mb-4">
                        <div class="shop-single-blog">
                            <img src="~/Assets/Img_Blogs/@blog.BlogImg" alt="@blog.Title" class="img-fluid">
                            <div class="content">
                                <p class="date">@blog.PublishedDate.ToString("dd MMM, yyyy. dddd")</p>
                                <a href="#" class="title">@blog.Title</a>
                                <p>@(blog.Summary.Length > 100 ? blog.Summary.Substring(0, 100) + "..." : blog.Summary)</p>
                                <a href="@Url.Action("Detail", "Blog", new { id = blog.BlogId })" class="more-btn">Read More <i class="fas fa-long-arrow-right"></i></a>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>





    <section class="shop-newsletter py-5">
        <div class="container">
            <div class="inner-top">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 col-12">

                        <div class="inner">
                            <h4>Newsletter</h4>
                            <p> Subscribe to our newsletter and get <span>30%</span> off your first purchase</p>
                            <form action="#" method="get" class="newsletter-inner">
                                <input name="email" placeholder="Your email address" required="" type="email">
                                <button class="btn">Subscribe <i class="fal fa-paper-plane"></i></button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="shop-services section home">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-12">

                    <div class="single-service">
                        <i class="fal fa-truck"></i>
                        <h4>Free Delivery</h4>
                        <p>Orders over $150</p>
                    </div>

                </div>
                <div class="col-lg-3 col-md-6 col-12">

                    <div class="single-service">
                        <i class="fal fa-sync"></i>
                        <h4>Get Refund</h4>
                        <p>Within 30 days returns</p>
                    </div>

                </div>
                <div class="col-lg-3 col-md-6 col-12">

                    <div class="single-service">
                        <i class="fal fa-lock"></i>
                        <h4>Safe Payment</h4>
                        <p>100% secure payment</p>
                    </div>

                </div>
                <div class="col-lg-3 col-md-6 col-12">

                    <div class="single-service">
                        <i class="fal fa-headset"></i>
                        <h4>24/7 Support</h4>
                        <p>Feel Free To Call us</p>
                    </div>

                </div>
            </div>
        </div>
    </section>


</body>

</html>
