@model IEnumerable<Models.ViewModels.ProductViewModel>

<div class="row">
    @foreach (var product in Model)
{

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="item">
            <div class="single-product">
                <div class="product-img">
                    <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })">
                        <img class="product-img" src="~/Assets/Img_Products/@product.ProductImg " alt="@product.ProductName" />
                    </a>
                    
                </div>
                <div class="product-content">
                    <h6 class="card-title text-primary fw-bold">@product.ProductName</h6>
                    <div class="product-rate">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= product.Rating)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="product-price">
                            <span>@string.Format("{0:N0} VNĐ", product.Price)</span>
                        </div>
                        <button class="product-cart-btn" data-productid="@product.ProductId" type="button"><i class="fal fa-shopping-cart"></i></button>
                    </div>
                </div>
            </div>
            <div class="button-head">
                <div class="product-action">
                    <a href="@Url.Action("Detail", "Product", new { id = product.ProductId })" class="btn btn-outline-light w-100">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                </div>
            </div>
        </div>
    </div>
}
</div>
