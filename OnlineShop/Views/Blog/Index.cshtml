@model IEnumerable<Models.Framework.Blog>

@{
    ViewBag.Title = "Blog";
}

<section class="blog-single shop-blog grid section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="row">
                    @foreach (var blog in Model)
                    {
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="shop-single-blog">
                                <img src="~/Assets/Img_Blogs/@blog.BlogImg" alt="@blog.Title">
                                <div class="content">
                                    <p class="date">@blog.PublishedDate.ToString("dd MMM, yyyy. dddd")</p>
                                    <a href="#" class="title">@blog.Title</a>
                                    <p>@blog.Summary</p>
                                    <a href="@Url.Action("Detail", "Blog", new { id = blog.BlogId })" class="more-btn">Read More <i class="far fa-long-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4 col-12">
                <div class="main-sidebar">
                    <div class="single-widget search">
                        <div class="form">
                            <input type="text" placeholder="Search Here...">
                            <a class="button" href="#"><i class="fa fa-search"></i></a>
                        </div>
                    </div>


                    <div class="single-widget recent-post">
                        <h3 class="title">Recent post</h3>
                        @foreach (var blog in Model.Take(3))
                        {
                            <div class="single-post">
                                <div class="image">
                                    <img src="~/Assets/Img_Blogs/@blog.BlogImg" alt="@blog.Title">
                                </div>
                                <div class="content">
                                    <h5><a href="#">@blog.Title</a></h5>
                                    <ul class="comment">
                                        <li><i class="fal fa-calendar" aria-hidden="true"></i>@blog.PublishedDate.ToString("MMM dd, yyyy")</li>
                                        <li><i class="fal fa-comment" aria-hidden="true"></i>0</li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="single-widget side-tags">
                        <h3 class="title">Popular Tags</h3>
                        <ul class="tag">
                            <li><a href="#">business</a></li>
                            <li><a href="#">corporate</a></li>
                            <li><a href="#">sale</a></li>
                            <li><a href="#">multipurpose</a></li>
                            <li><a href="#">online</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="shop-newsletter py-5">
    <div class="container">
        <div class="inner-top">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 col-12">
                    <div class="inner">
                        <h4>Newsletter</h4>
                        <p> Subscribe to our newsletter and get <span>30%</span> off your first purchase</p>
                        <form action="#" method="get" class="newsletter-inner">
                            <input name="email" placeholder="Your email address" required type="email">
                            <button class="btn">Subscribe <i class="fal fa-paper-plane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
